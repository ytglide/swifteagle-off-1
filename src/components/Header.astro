<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="navbar">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-4">
        <img src="/images/logo.png" alt="SwiftEagle Technology" class="w-10 h-10" />
        <span class="text-2xl font-heading font-bold text-white navbar-text">SwiftEagle</span>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-white/90 hover:text-white font-medium transition-colors duration-200 navbar-text">Home</a>
        <a href="#services" class="text-white/90 hover:text-white font-medium transition-colors duration-200 navbar-text">Services</a>
        <a href="#technologies" class="text-white/90 hover:text-white font-medium transition-colors duration-200 navbar-text">Technologies</a>
        <a href="#portfolio" class="text-white/90 hover:text-white font-medium transition-colors duration-200 navbar-text">Portfolio</a>
        <a href="#about" class="text-white/90 hover:text-white font-medium transition-colors duration-200 navbar-text">About</a>
        <a href="#contact" class="text-white/90 hover:text-white font-medium transition-colors duration-200 navbar-text">Contact</a>
      </div>

      <!-- Contact Button -->
      <div class="hidden md:block">
        <a href="#contact" class="btn-primary">
          Contact Us
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden text-white hover:text-white/80" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="md:hidden mt-4 hidden" id="mobile-menu">
      <div class="flex flex-col space-y-4 bg-black/50 backdrop-blur-lg rounded-lg p-4">
        <a href="/" class="text-white/90 hover:text-white font-medium transition duration-300">Home</a>
        <a href="#services" class="text-white/90 hover:text-white font-medium transition duration-300">Services</a>
        <a href="#technologies" class="text-white/90 hover:text-white font-medium transition duration-300">Technologies</a>
        <a href="#portfolio" class="text-white/90 hover:text-white font-medium transition duration-300">Portfolio</a>
        <a href="#about" class="text-white/90 hover:text-white font-medium transition duration-300">About</a>
        <a href="#contact" class="text-white/90 hover:text-white font-medium transition duration-300">Contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Navbar scroll effect - keeping transparent background as requested
  function handleNavbarScroll() {
    const navbar = document.getElementById('navbar');
    const navbarTexts = document.querySelectorAll('.navbar-text');
    if (!navbar) return;
    
    if (window.scrollY > 50) {
      // Add stronger backdrop blur but keep transparent
      navbar.classList.add('backdrop-blur-lg', 'bg-white/10');
      // Change text color to dark when scrolling over light sections
      navbarTexts.forEach(text => {
        text.classList.remove('text-white', 'text-white/90');
        text.classList.add('text-gray-900');
      });
    } else {
      navbar.classList.remove('backdrop-blur-lg', 'bg-white/10');
      // Keep white text in hero section
      navbarTexts.forEach(text => {
        text.classList.remove('text-gray-900');
        if (text.tagName === 'SPAN') {
          text.classList.add('text-white');
        } else {
          text.classList.add('text-white/90');
        }
      });
    }
  }
  
  // Initial state
  document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.getElementById('navbar');
    if (navbar) {
      navbar.classList.add('bg-transparent');
    }
    handleNavbarScroll();
  });
  
  // Add scroll listener
  window.addEventListener('scroll', handleNavbarScroll);
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
