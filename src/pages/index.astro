---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { WorldMapDemo } from '../components/ui/world-map-demo.tsx';
---

<Layout title="SwiftEagle Technology - Transform Your Vision Into Digital Reality">
  <Header />
  
  <!-- Hero Section - Updated Layout -->
  <section class="relative w-full min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Dynamic Gradient Background -->
    <div class="absolute inset-0 z-0">
      <img src="/images/hero/hero1-ne.png" alt="" class="w-full h-full object-cover" />
      <!-- Enhanced overlay for better readability with green tint -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/50 via-black/30 to-black/50"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-black/20"></div>
      <!-- Subtle green overlay to match theme -->
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-900/20 via-transparent to-green-900/20"></div>
    </div>
    
    <!-- Content left-aligned -->
    <div class="relative z-10 container mx-auto px-6 max-w-7xl">
      <div class="flex items-center min-h-screen">
        <div class="w-full lg:w-1/2 space-y-6 md:space-y-8 animate-slide-in-up">
          <!-- Main Headline -->
          <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-heading font-bold text-white leading-tight animate-slide-in-up" style="animation-delay: 0.2s;">
            Beyond Code.<br>Beyond Design.<br><span class="text-primary-400 font-light italic text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl block mt-2">Towards Meaning.</span>
          </h1>
          
          <!-- Supporting Text -->
          <p class="text-sm sm:text-base md:text-lg lg:text-xl text-white/90 max-w-2xl leading-relaxed animate-slide-in-up" style="animation-delay: 0.4s;">
            Leading IT solutions company delivering custom software development, web applications, and digital transformation services to accelerate your business success.
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 animate-slide-in-up" style="animation-delay: 0.6s;">
            <button class="btn-primary">
              Contact Us
            </button>
            <button class="btn-secondary">
              View Our Work
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Corner Text Elements -->
    <div class="absolute inset-0 pointer-events-none">
      <!-- Bottom left text aligned with logo -->
      <div class="absolute bottom-8 left-24 text-white/80 text-sm font-medium">
        [Fast Development • Quality Code • On-Time Delivery]
      </div>
      <!-- Bottom right text aligned with contact button -->
      <div class="absolute bottom-8 right-24 text-white/80 text-sm font-medium">
        • [100% Client Satisfaction]
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section id="services" class="py-32 relative bg-white">
    <div class="container mx-auto px-6 max-w-7xl">
      <div class="text-center mb-20 scroll-animate">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-6">
          Exceptional Services For Your <span class="gradient-text">Business Growth</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
          We offer comprehensive digital services tailored to your business needs.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Website Development -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.1s;">
          <div class="w-20 h-20 bg-gradient-to-br from-primary-100 to-primary-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-primary-600 transition-colors duration-300">Website Development</h3>
          <p class="text-gray-600">
            Modern, responsive websites built with cutting-edge technologies.
          </p>
        </div>

        <!-- Mobile App Development -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.2s;">
          <div class="w-20 h-20 bg-gradient-to-br from-emerald-100 to-emerald-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 011 1v11a1 1 0 01-1 1H5a1 1 0 01-1-1V7zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-emerald-600 transition-colors duration-300">Mobile App Development</h3>
          <p class="text-gray-600">
            High-performance mobile apps for iOS and Android platforms.
          </p>
        </div>

        <!-- System/Software Development -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.3s;">
          <div class="w-20 h-20 bg-gradient-to-br from-purple-100 to-purple-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-purple-600 transition-colors duration-300">Custom Software</h3>
          <p class="text-gray-600">
            Tailored enterprise solutions and custom applications.
          </p>
        </div>

        <!-- UI/UX Design -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.4s;">
          <div class="w-20 h-20 bg-gradient-to-br from-pink-100 to-pink-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-pink-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-pink-600 transition-colors duration-300">UI/UX Design</h3>
          <p class="text-gray-600">
            Intuitive interfaces and engaging user experiences.
          </p>
        </div>

        <!-- Search Engine Optimization -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.5s;">
          <div class="w-20 h-20 bg-gradient-to-br from-orange-100 to-orange-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-orange-600 transition-colors duration-300">SEO Optimization</h3>
          <p class="text-gray-600">
            Boost your search rankings and organic traffic.
          </p>
        </div>

        <!-- Digital Marketing -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.6s;">
          <div class="w-20 h-20 bg-gradient-to-br from-red-100 to-red-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-red-600 transition-colors duration-300">Digital Marketing</h3>
          <p class="text-gray-600">
            Strategic campaigns and content marketing solutions.
          </p>
        </div>

        <!-- Graphic Design -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.7s;">
          <div class="w-20 h-20 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-indigo-600 transition-colors duration-300">Graphic Design</h3>
          <p class="text-gray-600">
            Visual identities and marketing materials for your brand.
          </p>
        </div>

        <!-- Content Writing -->
        <div class="service-card text-center group scroll-animate" style="animation-delay: 0.8s;">
          <div class="w-20 h-20 bg-gradient-to-br from-teal-100 to-teal-200 rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-teal-500 to-teal-600 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-3 group-hover:text-teal-600 transition-colors duration-300">Content Writing</h3>
          <p class="text-gray-600">
            Engaging, SEO-optimized content for your audience.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Technologies Section -->
  <section class="py-32 relative overflow-hidden bg-gray-50">
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-20 scroll-animate">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-6">
          Technologies We Rely On To <span class="gradient-text">Achieve Success</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
          We use modern technologies to build scalable, reliable solutions.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 scroll-animate">
        <!-- Programming Languages -->
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/javascript.png" alt="JavaScript" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">JavaScript</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/python.png" alt="Python" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Python</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/php.png" alt="PHP" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">PHP</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/java.png" alt="Java" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Java</span>
        </div>
        
        <!-- Frontend Frameworks -->
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/react.png" alt="React" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">React</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/vuejs.png" alt="Vue.js" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Vue.js</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/angular.png" alt="Angular" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Angular</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/nextjs.png" alt="Next.js" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Next.js</span>
        </div>
        
        <!-- Backend & Database -->
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/nodes.png" alt="Node.js" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Node.js</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/lara.png" alt="Laravel" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">Laravel</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/mysql.png" alt="MySQL" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">MySQL</span>
        </div>
        
        <div class="flex flex-col items-center space-y-4 group">
          <div class="tech-icon">
            <img src="/images/tech/mongo.png" alt="MongoDB" class="w-full h-full object-contain" />
          </div>
          <span class="text-secondary-700 font-medium group-hover:text-primary-600 transition-colors duration-300">MongoDB</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Development Process -->
  <section class="py-32 relative bg-white">
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-20 scroll-animate">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-6">
          Enjoy Seamless Service With <span class="gradient-text">Our Easy Steps!</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Our proven development process ensures quality results at every stage.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 scroll-animate">
        <!-- Step 1 -->
        <div class="process-step text-center group">
          <div class="relative mb-8">
            <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto shadow-2xl group-hover:scale-110 transition-transform duration-300">
              <span class="text-3xl font-black text-white">01</span>
            </div>
            <div class="absolute -inset-4 bg-gradient-to-r from-primary-400 to-primary-600 rounded-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-300 blur-xl"></div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-4 group-hover:text-primary-600 transition-colors duration-300">Requirement Gathering</h3>
          <p class="text-gray-600">
            We understand your needs and project goals.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="process-step text-center group">
          <div class="relative mb-8">
            <div class="bg-gradient-to-br from-blue-500 to-blue-700 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto shadow-2xl group-hover:scale-110 transition-transform duration-300">
              <span class="text-3xl font-black text-white">02</span>
            </div>
            <div class="absolute -inset-4 bg-gradient-to-r from-blue-400 to-blue-600 rounded-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-300 blur-xl"></div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-4 group-hover:text-blue-600 transition-colors duration-300">Plan & Resources</h3>
          <p class="text-gray-600">
            Strategic planning and resource allocation for success.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="process-step text-center group">
          <div class="relative mb-8">
            <div class="bg-gradient-to-br from-purple-500 to-purple-700 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto shadow-2xl group-hover:scale-110 transition-transform duration-300">
              <span class="text-3xl font-black text-white">03</span>
            </div>
            <div class="absolute -inset-4 bg-gradient-to-r from-purple-400 to-purple-600 rounded-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-300 blur-xl"></div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-4 group-hover:text-purple-600 transition-colors duration-300">Design & Develop</h3>
          <p class="text-gray-600">
            Creating and building your digital solution.
          </p>
        </div>

        <!-- Step 4 -->
        <div class="process-step text-center group">
          <div class="relative mb-8">
            <div class="bg-gradient-to-br from-orange-500 to-orange-700 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto shadow-2xl group-hover:scale-110 transition-transform duration-300">
              <span class="text-3xl font-black text-white">04</span>
            </div>
            <div class="absolute -inset-4 bg-gradient-to-r from-orange-400 to-orange-600 rounded-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-300 blur-xl"></div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-4 group-hover:text-orange-600 transition-colors duration-300">Quality Assurance</h3>
          <p class="text-gray-600">
            Thorough testing to ensure quality standards.
          </p>
        </div>

        <!-- Step 5 -->
        <div class="process-step text-center group">
          <div class="relative mb-8">
            <div class="bg-gradient-to-br from-red-500 to-red-700 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto shadow-2xl group-hover:scale-110 transition-transform duration-300">
              <span class="text-3xl font-black text-white">05</span>
            </div>
            <div class="absolute -inset-4 bg-gradient-to-r from-red-400 to-red-600 rounded-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-300 blur-xl"></div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-4 group-hover:text-red-600 transition-colors duration-300">Deployment</h3>
          <p class="text-gray-600">
            Launching your solution to production environment.
          </p>
        </div>

        <!-- Step 6 -->
        <div class="process-step text-center group">
          <div class="relative mb-8">
            <div class="bg-gradient-to-br from-teal-500 to-teal-700 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto shadow-2xl group-hover:scale-110 transition-transform duration-300">
              <span class="text-3xl font-black text-white">06</span>
            </div>
            <div class="absolute -inset-4 bg-gradient-to-r from-teal-400 to-teal-600 rounded-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-300 blur-xl"></div>
          </div>
          <h3 class="text-lg font-semibold text-secondary-800 mb-4 group-hover:text-teal-600 transition-colors duration-300">Support & Maintenance</h3>
          <p class="text-gray-600">
            Ongoing support and maintenance for your solution.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Global Connectivity Section -->
  <section class="py-32 relative bg-gray-50">
    <div class="container mx-auto px-6 relative z-10">
      <!-- World Map Section -->
      <WorldMapDemo client:load />
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-32 relative bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-20 scroll-animate">
